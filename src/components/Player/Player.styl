.Player
	min-height 100vh
	width 80vw
	position fixed
	top 0
	left 0
	background-color #ffc300
	display flex
	align-items center
	justify-content center
	font-size 50px
	z-index 2
	transition 0.5s
	iframe 
		margin-top -90px
		pointer-events none
	&-arrow
		width: 60px;
		height: 60px;
		position: absolute;
		right: 0;
		transform: translateX(50%) rotate(-90deg)
		transition: 0.4s;
		cursor pointer
		margin-top -90px
		path
			transition 0.4s