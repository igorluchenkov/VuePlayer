.ProgressBar
	z-index 3
	position fixed
	bottom 0
	left 0
	width 100vw
	height 90px
	background-color #c70039
	display flex
	align-items center
	padding 15px 154px
	display flex
	justify-content space-between
	&-btn
		width 60px
		height 60px
		margin-right 15px
		background #ffc300
		position relative
		border-radius 6px
		user-select none
		transition 0.1s
		opacity 0.9
		cursor pointer
		&:hover
			opacity 1
		&:last-child
			margin-right 0
		img
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
			width 35px
	&-prev
		img
			transform translate(-50%, -50%) rotate(180deg)
	&-info 
		display flex
		flex-wrap wrap
		align-items flex-start
		height 100%
		justify-content space-between
		flex 1
		margin 0 30px 0 14px
		&__title
			width calc(100% - 120px)
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
			padding-right 20px
			font-size 20px
			color #ffffff
		&__duration
			font-size 20px
			color #ffffff
		&__progress
			cursor pointer
			width 100%
			height 5px
			border-radius 100px
			overflow hidden
			background-color #fff
			margin-top 10px
			&-current
				height 100%
				width 50%
				background-color #ffc300
				border-radius 100px