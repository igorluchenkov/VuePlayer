.ProgressBar
	z-index 3
	position fixed
	bottom 0
	left 0
	width 100vw
	height 90px
	background-color #c70039
	display flex
	align-items center
	padding 15px 154px
	display flex
	justify-content space-between
	&-btn
		width 60px
		height 60px
		margin-right 15px
		background #ffc300
		position relative
		border-radius 6px
		user-select none
		transition 0.1s
		opacity 0.9
		cursor pointer
		&:hover
			opacity 1
		&-looped
			opacity 1
			img
				transform translate(-50%, -50%) rotate(-180deg) !important
		&:last-child
			margin-right 0
		&__volume
			height 100%
			width 130px
			background-color #ffc300
			position absolute
			left 50%
			bottom 90px
			border-top-left-radius 6px
			border-bottom-left-radius 6px
			transform translateX(-50%) rotate(90deg)
			opacity 0
			pointer-events none
			transition 0.1s
			padding 0 9px 0 17px
			display flex
			align-items center
			justify-content center	
		&__volume-active
			opacity 1
			.ProgressBar-btn__volume
				opacity 1
				pointer-events all
		img
			pointer-events none
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)
			width 35px
			transition 0.4s
	&-prev
		img
			transform translate(-50%, -50%) rotate(180deg)
	&-info 
		display flex
		flex-wrap wrap
		align-items flex-start
		height 100%
		justify-content space-between
		flex 1
		margin 0 30px 0 14px
		&__title
			width calc(100% - 120px)
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
			padding-right 20px
			font-size 20px
			color #ffffff
		&__duration
			font-size 20px
			color #ffffff
		&__progress
			cursor pointer
			width 100%
			height 5px
			border-radius 100px
			overflow hidden
			background-color #fff
			margin-top 10px
			&-current
				height 100%
				width 50%
				background-color #ffc300
				border-radius 100px





input[type=range] {
  -webkit-appearance: none; /* Hides the slider so that custom slider can be made */
  width: 100%; /* Specific width is required for Firefox. */
  background: transparent; /* Otherwise white in Chrome */
}

input[type=range]::-webkit-slider-runnable-track {
  height: 10px;
  cursor: pointer;
  animate: 0.2s;
  background: #ff5733;
  border-radius: 1.3px;
}
input[type=range]::-webkit-slider-thumb {
  height: 30px;
  width: 12px;
  background: #000;
  cursor: pointer;
  -webkit-appearance: none;
  margin-top: -10px;
	border-radius: 3px;
}
input[type=range]:focus::-webkit-slider-runnable-track {
  background: #ff5733;
}
input[type=range]::-moz-range-track {
  height: 8.4px;
  cursor: pointer;
  animate: 0.2s;
  background: #ff5733;
  border-radius: 1.3px;
}
input[type=range]::-moz-range-thumb {
  height: 36px;
  width: 16px;
  border-radius: 3px;
  background: #ffffff;
  cursor: pointer;
}
input[type=range]::-ms-track {
  width: 100%;
  height: 8.4px;
  cursor: pointer;
  animate: 0.2s;
  background: transparent;
  color: transparent;
}
input[type=range]::-ms-fill-lower {
  background: #2a6495;
  border-radius: 2.6px;
}
input[type=range]::-ms-fill-upper {
  background: #ff5733;
  border-radius: 2.6px;
}
input[type=range]::-ms-thumb {
  height: 36px;
  width: 16px;
  border-radius: 3px;
  background: #ffffff;
  cursor: pointer;
}
input[type=range]:focus::-ms-fill-lower {
  background: #ff5733;
}
input[type=range]:focus::-ms-fill-upper {
  background: #ff5733;
}